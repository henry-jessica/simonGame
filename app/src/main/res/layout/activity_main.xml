<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_14"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TV_CurrentLevel"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:background="@drawable/level_img"
        android:gravity="center_vertical|center_horizontal"
        android:text="Level: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        android:textColor="#FEFDFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.969"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <Button
        android:id="@+id/btn_book"
        android:layout_width="95dp"
        android:layout_height="104dp"
        android:background="@drawable/btn_book"
        android:enabled="false"
        android:soundEffectsEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.143" />

    <Button
        android:id="@+id/btn_witch"
        android:layout_width="127dp"
        android:layout_height="92dp"
        android:background="@drawable/btn_witch_hate"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831" />

    <Button
        android:id="@+id/btn_poison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_poison"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <Button
        android:id="@+id/btn_candle"
        android:layout_width="116dp"
        android:layout_height="121dp"
        android:background="@drawable/btn_candle"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.486" />

    <TextView
        android:id="@+id/TV_UserDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#76FF03"
        app:layout_constraintBottom_toTopOf="@+id/btn_witch"
        app:layout_constraintEnd_toStartOf="@+id/btn_candle"
        app:layout_constraintStart_toEndOf="@+id/btn_witch"
        app:layout_constraintTop_toBottomOf="@+id/btn_poison" />

    <TextView
        android:id="@+id/TV_ScoreItem"
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:background="@drawable/level_img"
        android:gravity="center_vertical|center_horizontal"
        android:text="Score:0"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FCFDFD"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <Button
        android:id="@+id/Btn_Play"
        android:layout_width="84dp"
        android:layout_height="71dp"
        android:background="@drawable/img_1"
        android:onClick="StartLevel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

</androidx.constraintlayout.widget.ConstraintLayout>